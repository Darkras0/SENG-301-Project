        br
        br
        br
        
        // Display Watched Anime
        #watchedAnime
        div(style='text-align: left')
            h2 Watched Anime
                table
                    thead
                        th Anime Name
                        th Genre
                    tbody
                        div!=data
        // /Watched anime
